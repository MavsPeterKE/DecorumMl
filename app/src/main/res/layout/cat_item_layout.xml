<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <ImageView
                android:id="@+id/imDesign"
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="140dp"
                android:background="@drawable/dining_table"
                android:scaleType="centerCrop" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/tvItemdesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Cup was laucnhed in 1961 in florida then broight to japan my mexinas who "
                android:ellipsize="end"
                android:singleLine="false"
                android:textSize="12sp"
                android:layout_weight="0.8"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                app:typeface="FontsFree-Net-SFProText-Bold.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/rectangular_border_no_fill"
            android:weightSum="2">
            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/tvFurnitureName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Cup Mug "
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_weight="1.6"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                app:typeface="FontsFree-Net-SFProText-Bold.ttf" />

            <com.ctrlplusz.anytextview.AnyTextView
                android:id="@+id/tvCash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Ksh. 550.00"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="12sp"
                android:layout_weight="1.6"
                android:textColor="#000"
                android:layout_marginBottom="5dp"
                app:typeface="FontsFree-Net-SFProText-Bold.ttf" />


        </LinearLayout>
    </LinearLayout>